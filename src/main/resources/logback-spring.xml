<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 基础日志格式 -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 日志输出目录 -->
    <property name="LOG_FILE" value="./logs/app"/>

    <!-- 控制台输出 -->
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步文件输出（可选） -->
    <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ================== 关键：屏蔽无用日志 ================== -->

    <!-- 屏蔽 Logback 自身日志 -->
    <logger name="ch.qos.logback" level="WARN"/>

    <!-- 屏蔽 Spring Test 冗余日志 -->
    <logger name="org.springframework.test" level="WARN"/>
    <logger name="org.springframework.boot.test" level="WARN"/>
    <logger name="org.springframework.test.context" level="WARN"/>

    <!-- 屏蔽 Spring Boot 自动配置日志 -->
    <logger name="org.springframework.boot.autoconfigure" level="WARN"/>

    <!-- 屏蔽 HikariCP 连接池 INFO 日志 -->
    <logger name="com.zaxxer.hikari" level="WARN"/>

    <!-- 屏蔽 MyBatis 内部组件日志（保留 SQL） -->
    <logger name="org.apache.ibatis" level="INFO"/>
    <logger name="org.apache.ibatis.transaction" level="WARN"/>
    <logger name="org.apache.ibatis.datasource" level="WARN"/>
    <logger name="org.apache.ibatis.session" level="WARN"/>
    <logger name="org.apache.ibatis.executor" level="WARN"/>

    <!-- ================== 你的业务日志 ================== -->
    <!-- 控制台输出（带颜色，仅 dev/test 环境） -->
    <springProfile name="dev,local,test">
        <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
            <!-- 使用带颜色的编码器 -->
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{20}) [%thread] - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
    </springProfile>

    <!-- 控制台输出（无颜色，prod 环境） -->
    <springProfile name="prod">
        <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %-5level %logger{50} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
    </springProfile>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="FileAppender"/>
    </root>

</configuration>